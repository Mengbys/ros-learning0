<?xml version="1.0"?>
<robot name="materials">

  <material name="blue">
    <color rgba="1 0 1 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>


  <link name="foot_base">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
        <geometry>
          <cylinder length="0.1" radius="0.2"/>
        </geometry>
    </collision>
    <inertial>
      <mass value="5" />
      <origin xyz="0 0 0" />
      <inertia ixx="5.0" ixy="0.0" ixz="0.0"
        iyy="5.0" iyz="0.0"
        izz="5.0" />
    </inertial>
  </link>


   <gazebo reference="body">
        <material>Gazebo/SkyBlue</material>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
    </gazebo>

  <link name="right_leg">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
       <geometry>
        <box size="0.6 0.1 0.2"/>
       </geometry>
       <origin rpy="0 1.57075 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5" />
      <origin xyz="0 0 0" />
      <inertia ixx="50.0" ixy="0.0" ixz="0.0"
        iyy="50.0" iyz="0.0"
        izz="50.0" />
    </inertial>
  </link>

  <joint name="base_to_right_leg" type="fixed">
    <parent link="foot_base"/>
    <child link="right_leg"/>
    <origin xyz="0 -0.22 0.3"/>
  </joint>

  <link name="left_leg">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
       <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5" />
      <origin xyz="0 0 0" />
      <inertia ixx="50.0" ixy="0.0" ixz="0.0"
        iyy="50.0" iyz="0.0"
        izz="50.0" />
    </inertial>
  </link>

  <joint name="base_to_left_leg" type="fixed">
    <parent link="foot_base"/>
    <child link="left_leg"/>
    <origin xyz="0 0.22 0.3"/>
  </joint>

  <link name="body">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.25"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
        <geometry>
          <cylinder length="0.5" radius="0.2"/>
        </geometry>
    </collision>
    <inertial>
      <mass value="50" />
      <origin xyz="0 0 0" />
      <inertia ixx="50.0" ixy="0.0" ixz="0.0"
        iyy="50.0" iyz="0.0"
        izz="50.0" />
    </inertial>
  </link>

  <joint name="base_to_body_leg" type="fixed">
    <parent link="foot_base"/>
    <child link="body"/>
    <origin xyz="0 0 0.85"/>
  </joint>

  <link name="head">
   <inertial>
      <mass value="50" />
      <origin xyz="0 0 0" />
      <inertia ixx="50.0" ixy="0.0" ixz="0.0"
        iyy="50.0" iyz="0.0"
        izz="50.0" />
    </inertial>
    <visual>
      <geometry>
              <sphere radius = "0.2"/>
          </geometry>
          <material name = "white">
              <color rgba = "1 1 1 1"/>
          </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <sphere radius = "0.2"/>
      </geometry>
    </collision>
  </link>

  <joint name="body_to_head_leg" type="fixed">
    <parent link="body"/>
    <child link="head"/>
    <origin xyz="0 0 0.45"/>
  </joint>

  <gazebo>
    <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>/map</odometryFrame>
      <odometryRate>20.0</odometryRate>
      <robotBaseFrame>foot_base</robotBaseFrame>
    </plugin>
  </gazebo>

</robot>
