<launch>
    <node pkg = "turtlesim" type = "turtlesim_node" name = "turtlesim_node">
    	<remap from = "turtle1/cmd_vel" to = "/smooth_cmd_vel"/> 
    </node>
    <node pkg = "testpkg0" type = "node0" name = "node0">
    	<remap from = "turtle1/cmd_vel" to = "/raw_cmd_vel"/>
    </node>
    <node pkg = "nodelet" type = "nodelet" name = "velocity_smoother"
    	args = "standalone yocs_velocity_smoother/VelocitySmootherNodelet nodelet_manager"
    	output = "screen">
    	<param name = "accel_lim_v" value = "1"/>
    	<param name = "accel_lim_w" value = "1"/>
    	<param name = "speed_lim_v" value = "100"/>
    	<param name = "speed_lim_w" value = "100"/>
    	<!-- velocity command I/O -->
    	<remap from = "velocity_smoother/raw_cmd_vel" to = "/raw_cmd_vel"/>
    	<remap from = "velocity_smoother/smooth_cmd_vel" to = "/smooth_cmd_vel"/>
    </node>
</launch>
